# This file contains the fastlane.tools configuration
# Fastlane configuration for WildLifeConnect project

default_platform(:android)

platform :android do
  desc "Runs all the tests"
  lane :test do
    # Diagnostic commands to ensure the correct working directory and structure
    sh "pwd"
    sh "ls -la ../.." # Adjusted to list the project root directory from fastlane folder

    gradle(
      task: "test",
      gradle_path: '../../android/gradlew' # Adjusted path to go two levels up
    )
  end

  desc "Submit a new Beta Build to Crashlytics Beta"
  lane :beta do
    gradle(
      task: "clean assembleRelease",
      gradle_path: '../../android/gradlew' # Adjusted path to go two levels up
    )
    crashlytics
    # Add any additional beta testing services here
  end

  desc "Deploy a new version to the Google Play Store"
  lane :deploy do
    gradle(
      task: "clean assembleRelease",
      gradle_path: '../../android/gradlew' # Adjusted path to go two levels up
    )
    upload_to_play_store(
       json_key_file: ENV['SERVICE_ACCOUNT_JSON_PATH'],
    )
  end
end
